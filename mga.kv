SManager:
    MainMenu:
    
#Values for buttons inside of Spinner
<SpinnerOption>
    text_size:self.width,None
    halign:'center'
#Top bar for all menus    
<TopPanel>
    cols:2
    size_hint_y:0.10
    pos_hint:{'center_y':0.951}

<AlphaCard@MDCard>:
    id:alcard
    size_hint:(0.8,0.8)
    md_bg_color: (159/256,189/256,237/256,1)
    padding: dp(15)
    spacing: dp(15)
    radius: [dp(25),dp(25),dp(25),dp(25)]
    ripple_behavior: False
    source:""
    elevation:30
    orientation:'horizontal'
    label_text:''
    MDLabel:
        text:root.label_text
        halign:'center'


<MainMenu>
    name: 'MainMenu'
    MDBottomNavigation:
        #Letter learning screen
        MDBottomNavigationItem:
            name:'letters'
            icon:'alphabetical'
            TopPanel:
                #App name string
                MDLabel:
                    id:apptitle
                    text:app.language_strings['app_name'][app.settings['language']]
                    size_hint:(0.9,0.1)
                    pos_hint:{'center_x':0.5,'center_y':0.98}
                    halign:'center'
                #Dropdown list with available languages
                Spinner:
                    id:languages
                    size_hint:(0.2,0.1)
                    pos_hint:{'right':0.98,'center_y':0.98}
                    text:app.current_lng
                    text_size: self.width, None
                    halign:'center'
                    values:'English - en','język polski - pl','русския язык - ru'
                    on_text: app.change_language(languages.text);app.save_settings()

            #Layout holding elements other than topbar
            BoxLayout:
                orientation:'vertical'
                size_hint_y:0.8
                BoxLayout:
                    size_hint_y:0.2

                #Card displaying random Georgian letter
                MDCard:
                    size_hint:(0.35,0.15)
                    pos_hint_y: 0.3
                    halign:'center'
                    md_bg_color: app.default_card_color
                    pos_hint:{'center_x':0.5}
                    radius: [dp(20),dp(20),dp(20),dp(20)]
                    spacing:"56dp"
                    GridLayout:
                        rows:2
                        MDLabel:
                            id: geo_letter
                            text:app.first_geo_letter
                            halign:'center'
                            font_size:self.height/2
                            size_hint_y:0.95
                            #Not included in the repo
                            #Georgian fonts can be found at:
                            #https://fonts.google.com/
                            font_name:app.geo_font
                        BoxLayout:
                            size_hint_y:0.05
                            BoxLayout:
                                size_hint_x:0.9
                            MDIconButton:
                                icon:'volume-high'
                                on_release:app.play_letter_sound('a')
                BoxLayout:
                    size_hint_y:0.15 
                    #Just a placeholder button for testing purposes
                    #To be removed after implementing functionality
                    #to random letter buttons
                    BoxLayout:
                        size_hint_x:0.2
                    MDIconButton:
                        icon:'arrow-right-thick'
                        pos_hint:{'center_x':0.5}
                        on_release:app.pick_georgian_letter(0)
                    BoxLayout:
                        size_hint_x:0.2
                        

                #Layout storing 4 cards, 3 with random letters 
                #and one with correct answer.
                #BoxLayouts are just spacers.
                GridLayout:
                    cols:9
                    size_hint_y: 0.07
                    BoxLayout:
                        size_hint_x:0.01

                    #1st letter
                    MDCard:
                        id:first_letter
                        size_hint:(0.2,0.2)
                        halign:'center'
                        md_bg_color: app.default_card_color
                        pos_hint:{'center_x':0.5}
                        radius: [dp(20),dp(20),dp(20),dp(20)]
                        spacing: dp(20)
                        on_release: app.check_answer(root.ids.geo_letter.text,root.ids.first_card_text.text,0,0)
                        MDLabel:
                            id:first_card_text
                            text:app.shuffled_first_letters[0]
                            halign:'center'
                            font_size:self.height/3

                    BoxLayout:
                        size_hint_x: 0.02

                    #Second Letter
                    MDCard:
                        id:second_letter
                        size_hint:(0.2,0.4)
                        halign:'center'
                        md_bg_color: app.default_card_color
                        pos_hint:{'center_x':0.5}
                        radius: [dp(20),dp(20),dp(20),dp(20)]
                        padding: 16
                        on_release: app.check_answer(root.ids.geo_letter.text,root.ids.second_card_text.text,1,0)
                        MDLabel:
                            id:second_card_text
                            font_size:root.ids.first_card_text.font_size
                            text:app.shuffled_first_letters[1]
                            halign:'center'
                        

                    BoxLayout:
                        size_hint_x: 0.02
                    
                    #3rd letter
                    MDCard:
                        id:third_letter
                        size_hint:(0.2,0.4)
                        halign:'center'
                        md_bg_color: app.default_card_color
                        pos_hint:{'center_x':0.5}
                        radius: [dp(20),dp(20),dp(20),dp(20)]
                        padding: 16
                        on_release: app.check_answer(root.ids.geo_letter.text,root.ids.third_card_text.text,2,0)
                        MDLabel:
                            id:third_card_text
                            font_size:root.ids.first_card_text.font_size
                            text:app.shuffled_first_letters[2]
                            halign:'center'
                    
                    BoxLayout:
                        size_hint_x: 0.02

                    #4th letter                
                    MDCard:
                        id:fourth_letter
                        size_hint:(0.2,0.4)
                        halign:'center'
                        md_bg_color: app.default_card_color
                        pos_hint:{'center_x':0.5}
                        radius: [dp(20),dp(20),dp(20),dp(20)]
                        padding: 16
                        on_release: app.check_answer(root.ids.geo_letter.text,root.ids.fourth_card_text.text,3,0)
                        MDLabel:
                            id:fourth_card_text
                            font_size:root.ids.first_card_text.font_size
                            text:app.shuffled_first_letters[3]
                            halign:'center'

                    BoxLayout:
                        size_hint_x: 0.01

                #Making space between random letters and bottom navbar        
                BoxLayout:
                    size_hint_y:0.03


        #Time attack screen
        MDBottomNavigationItem:
            name:'time-attack'
            icon:'clock'
            TopPanel:
                #App name string
                MDLabel:
                    id:apptitle_ta
                    text:app.language_strings['app_name'][app.settings['language']]
                    size_hint:(0.9,0.1)
                    pos_hint:{'center_x':0.5,'center_y':0.98}
                    halign:'center'
                #Dropdown list with available languages
                Spinner:
                    id:languages_ta
                    size_hint:(0.2,0.1)
                    pos_hint:{'right':0.98,'center_y':0.98}
                    text:app.current_lng
                    text_size: self.width, None
                    halign:'center'
                    values:'English - en','język polski - pl','русския язык - ru'
                    on_text: app.change_language(languages_ta.text);app.save_settings()
            BoxLayout:
                orientation:'vertical'                    
                size_hint_y:0.8
                GridLayout:
                    size_hint_y:0.2
                    cols:3
                    MDLabel:
                        id: timer
                        text:app.time_attack_initial
                    ModifiedSlider:
                        id:time_value
                        min:1
                        max:5.99
                        value:1
                        hint:True
                        hint_text_color:(1,0,0,1)
                        size_hint:(0.5,root.height)
                        pos_hint:{'center_x':0.5,'center_y':0.7}
                        on_release: app.ConvertTimeSliderValueToSeconds()
                    MDLabel:
                        id:answer_streak_ta
                        text:app.answer_streak_string_ta
                #Card displaying random Georgian letter
                MDCard:
                    size_hint:(0.35,0.15)
                    pos_hint_y: 0.3
                    halign:'center'
                    md_bg_color: app.default_card_color
                    pos_hint:{'center_x':0.5}
                    radius: [dp(20),dp(20),dp(20),dp(20)]
                    spacing:"56dp"
                    MDLabel:
                        id: geo_letter_ta
                        text:app.first_geo_letter
                        halign:'center'
                        font_size:self.height/2
                        #Not included in the repo
                        #Georgian fonts can be found at:
                        #https://fonts.google.com/
                        font_name:app.geo_font
                BoxLayout:
                    size_hint_y:0.15 
                    #Just a placeholder button for testing purposes
                    #To be removed after implementing functionality
                    #to random letter buttons
                    BoxLayout:
                        size_hint_x:0.2
                    MDIconButton:
                        icon:'arrow-right-thick'
                        pos_hint:{'center_x':0.5}
                        on_release:app.check_answer(root.ids.geo_letter_ta.text,root.ids.TimeAttackAnswer.text,0,1);app.pick_georgian_letter(1);app.TimeAttackClock()
                    BoxLayout:
                        size_hint_x:0.2
                BoxLayout:
                    size_hint_y:0.07
                    BoxLayout:
                        size_hint:0.4,None
                    BoxLayout:
                        size_hint:0.2,0.8
                        MDTextFieldRound:
                            id:TimeAttackAnswer
                            halign:'center'
                    BoxLayout:
                        size_hint:0.4,None
                BoxLayout:
                    size_hint_y:0.03


        #Transcription screen
        MDBottomNavigationItem:
            name:'transcription'
            icon:'text-box-outline'
            TopPanel:
                #App name string
                MDLabel:
                    id:apptitle_trans
                    text:app.language_strings['app_name'][app.settings['language']]
                    size_hint:(0.9,0.1)
                    pos_hint:{'center_x':0.5,'center_y':0.98}
                    halign:'center'
                #Dropdown list with available languages
                Spinner:
                    id:languages_trans
                    size_hint:(0.2,0.1)
                    pos_hint:{'right':0.98,'center_y':0.98}
                    text:app.current_lng
                    text_size: self.width, None
                    halign:'center'
                    values:'English - en','język polski - pl','русския язык - ru'
                    on_text: app.change_language(languages_trans.text);app.save_settings()
            BoxLayout:
                orientation:'vertical'                    
                size_hint_y:0.9
                GridLayout:
                    rows:5
                    MDLabel:
                        id:streak_trans
                        text:app.answer_streak_string_ta
                        size_hint_y:0.1
                        halign:'center'
                    MDLabel:
                        id:trans_text
                        text: app.transcriptions[0]
                        size_hint_y:0.1
                        halign:'center'
                        #Not included in the repo
                        #Georgian fonts can be found at:
                        #https://fonts.google.com/
                        font_name:app.geo_font
                    BoxLayout:
                        size_hint_y:0.03
                        BoxLayout:
                            size_hint_x:0.4
                        MDIconButton:
                            icon:'arrow-right-thick'
                            pos_hint:{'center_x':0.5}
                            on_release:app.GetTranscriptionLine()
                            halign:'center'
                        BoxLayout:
                            size_hint_x:0.4
                    BoxLayout:
                        size_hint_y:0.04
                        BoxLayout:
                            size_hint_x:0.4
                        MDTextFieldRound:
                            halign:'center'
                            size_hint_x:0.2
                        BoxLayout:
                            size_hint_x:0.4
                    BoxLayout:
                        size_hint_y:0.6



        #Screen with history of Georgian alphabets
        MDBottomNavigationItem:
            name:'history'
            icon:'book-open-blank-variant'
            TopPanel:
                #App name string
                MDLabel:
                    id:apptitle_alph
                    text:app.language_strings['app_name'][app.settings['language']]
                    size_hint:(0.9,0.1)
                    pos_hint:{'center_x':0.5,'center_y':0.98}
                    halign:'center'
                #Dropdown list with available languages
                Spinner:
                    id:languages_alph
                    size_hint:(0.2,0.1)
                    pos_hint:{'right':0.98,'center_y':0.98}
                    text:app.current_lng
                    text_size: self.width, None
                    halign:'center'
                    values:'English - en','język polski - pl','русския язык - ru'
                    on_text: app.change_language(languages_alph.text);app.save_settings()
            BoxLayout:
                orientation:'vertical'                    
                size_hint_y:0.8
                MDLabel:
                    id:screen_title_alph
                    text:app.language_strings['title_alph'][app.settings['language']]
                    size_hint_y:0.02
                    halign:'center'
                MDGridLayout:
                    size_hint_y:0.2
                    rows: 2
                    cols:2
                    spacing: dp(20)
                    padding: [dp(20),dp(20),dp(20),dp(20)]
                    AlphaCard:
                        id:alph_general
                        label_text:app.language_strings['gen_alph'][app.settings['language']]
                        on_release:app.history_screen_dialog('gen_alph','gen_alph_info')
                    AlphaCard:
                        id:alph_asomtavruli
                        label_text:app.language_strings['asomtavruli'][app.settings['language']]
                        on_release:app.history_screen_dialog('asomtavruli','asomtavruli_info')
                    AlphaCard:
                        id:alph_nuskhuri
                        label_text:app.language_strings['nuskhuri'][app.settings['language']]
                        on_release:app.history_screen_dialog('nuskhuri','nuskhuri_info')
                    AlphaCard:
                        id:alph_mkhedruli
                        label_text:app.language_strings['mkhedruli'][app.settings['language']]
                        on_release:app.history_screen_dialog('mkhedruli','mkhedruli_info')
            BoxLayout:
                size_hint_y:0.07

        #Settings screen
        MDBottomNavigationItem:
            name:'settings'
            icon:'cog-outline'
            TopPanel:
                #App name string
                MDLabel:
                    id:apptitle_settings
                    text:app.language_strings['app_name'][app.settings['language']]
                    size_hint:(0.9,0.1)
                    pos_hint:{'center_x':0.5,'center_y':0.98}
                    halign:'center'
                #Dropdown list with available languages
                Spinner:
                    id:languages_settings
                    size_hint:(0.2,0.1)
                    pos_hint:{'right':0.98,'center_y':0.98}
                    text:app.current_lng
                    text_size: self.width, None
                    halign:'center'
                    values:'English - en','język polski - pl','русския язык - ru'
                    on_text: app.change_language(languages_settings.text);app.save_settings()
            BoxLayout:
                orientation:'vertical'                    
                size_hint_y:0.8
                MDGridLayout:
                    cols:2
                    MDLabel:
                        id:voice_label
                        text:app.language_strings['voice'][app.settings['language']]
                    Switch:
                        id:voice_switch
                        active:app.voice_switch_state
                        on_touch_down:app.change_voice();app.save_settings()
            BoxLayout:
                size_hint_y:0.07
        #Achievements screen
        MDBottomNavigationItem:
            name:'achievements'
            icon:'trophy-outline'
            TopPanel:
                #App name string
                MDLabel:
                    id:apptitle_achievements
                    text:app.language_strings['app_name'][app.settings['language']]
                    size_hint:(0.9,0.1)
                    pos_hint:{'center_x':0.5,'center_y':0.98}
                    halign:'center'
                #Dropdown list with available languages
                Spinner:
                    id:languages_achievements
                    size_hint:(0.2,0.1)
                    pos_hint:{'right':0.98,'center_y':0.98}
                    text:app.current_lng
                    text_size: self.width, None
                    halign:'center'
                    values:'English - en','język polski - pl','русския язык - ru'
                    on_text: app.change_language(languages_achievements.text);app.save_settings()
